{
    "name": "Black",
    "author": "Okibob",

    "setting": {
        "step": 8,
        "scales": { "xs": 0.25, "sm": 0.75, "md": 1, "lg": 1.25, "xl": 1.5 }
    },
    
    "roots": {
        "--spacing": "0.5rem",
        "--font-size": "16px",
        "--radius": "0.5rem"
    },

    "colors": {
        "--background": "oklch(14.5% 0 0)",
        "--foreground": "oklch(98.5% 0 0)",
        "--primary": "oklch(92.2% 0 0)",
        "--secondary": "oklch(26.9% 0 0)",
        "--muted": "oklch(26.9% 0 0)",
        "--accent": "oklch(37.1% 0 0)",
        "--border": "oklch(100% 0 0 / .1)"
    },
    
    "colors-generators": [
        {"prefix": "bg", "css-key": "background-color"},
        {"prefix": "text", "css-key": "color"},
        {"prefix": "border", "css-key": "border-color"},
        
        {"prefix": "bg", "css-key": "background-color", "is-hover": true},
        {"prefix": "text", "css-key": "color", "is-hover": true},
        {"prefix": "border", "css-key": "border-color", "is-hover": true}
    ],

    "generators": [
        {
            "prefix": "p",
            "val-key": "--spacing",
            "css-key": "padding",
            
            "as-auto": true,
            "as-scale": true,

            "variants": [
                {"prefix": "py", "css-subkey": "block"},
                {"prefix": "px", "css-subkey": "inline"},
                {"prefix": "p-top", "css-subkey": "top"},
                {"prefix": "p-bottom", "css-subkey": "bottom"},
                {"prefix": "p-left", "css-subkey": "left"},
                {"prefix": "p-right", "css-subkey": "right"}
            ]
        },

        {
            "prefix": "m",
            "val-key": "--spacing",
            "css-key": "margin",
            
            "as-auto": true,
            "as-scale": true,

            "variants": [
                {"prefix": "my", "css-subkey": "block"},
                {"prefix": "mx", "css-subkey": "inline"},
                {"prefix": "m-top", "css-subkey": "top"},
                {"prefix": "m-bottom", "css-subkey": "bottom"},
                {"prefix": "m-left", "css-subkey": "left"},
                {"prefix": "m-right", "css-subkey": "right"}
            ]
        },

        {
            "prefix": "gap",
            "val-key": "--spacing",
            "css-key": "gap"
        },

        {
            "prefix": "size",
            "val-key": "--font-size",
            "css-key": "font-size"
        },

        {
            "prefix": "r",
            "val-key": "--radius",
            "css-key": "border-radius"
        },

        {
            "prefix": "top",
            "val-key": "--spacing",
            "css-key": "top",
            "step": 4,
            "as-auto": true
        },
        {
            "prefix": "bottom",
            "val-key": "--spacing",
            "css-key": "bottom",
            "step": 4,
            "as-auto": true
        },
        {
            "prefix": "left",
            "val-key": "--spacing",
            "css-key": "left",
            "step": 4,
            "as-auto": true
        },
        {
            "prefix": "right",
            "val-key": "--spacing",
            "css-key": "right",
            "step": 4,
            "as-auto": true
        }

    ],
    
    "priority-order": [
        "theme.css",
        "base.css",
        "utilities.css"
    ]
}